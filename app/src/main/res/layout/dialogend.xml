<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:id="@+id/dialogfon"
    android:background="@drawable/dialogbg"
    android:layout_gravity="center"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/previewimg"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@drawable/countdown"
            android:layout_weight="45"
            android:layout_marginTop="10dp"/>

        <TextView
            android:gravity="center"
            android:fontFamily="@font/baamini"
            android:id="@+id/textdescriptionend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="30"
            android:text="გილოცავ, შენ გაიარე ეს ლეველი!"
            android:textColor="#404040"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncontinue"
                android:fontFamily="@font/baamini"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_clicked1"
                android:layout_weight="15"
                android:textSize="16dp"
                android:text="გაგრძელება"
                android:textStyle="bold"
                android:textColor="#404040"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
            <Button
                android:id="@+id/btnmenu"
                android:fontFamily="@font/baamini"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_clicked1"
                android:layout_weight="15"
                android:textSize="16dp"
                android:text="ლეველები"
                android:textStyle="bold"
                android:textColor="#404040"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>