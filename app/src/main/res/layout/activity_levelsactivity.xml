<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levels_background"
    tools:context=".levelsactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="151dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="670dp"
            android:background="@drawable/levels_button_menu_clicked"
            android:gravity="bottom" />

        <Button
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="670dp"
            android:background="@drawable/levels_button_next_page_clicked"
            android:gravity="center_horizontal" />
    </LinearLayout>


    <ImageView
        android:layout_width="367dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/levels_levelselectortext" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView1"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="1"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView2"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="2"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView3"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="3"
                android:textAlignment="center"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView4"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="4"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView5"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="5"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView6"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="6"
                android:textAlignment="center"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView7"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="7"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView8"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="8"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView9"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="9"
                android:textAlignment="center"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView10"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="10"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView11"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="11"
                android:textAlignment="center"
                android:textSize="35sp" />

            <Button
                android:id="@+id/textView12"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="-16dp"
                android:background="@drawable/levels_levelbutton_clicked"
                android:fontFamily="@font/peacesans"
                android:text="12"
                android:textAlignment="center"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
