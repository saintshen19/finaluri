<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:id="@+id/dialogfon"
    android:background="@drawable/dialogbg"
    android:layout_gravity="center"
    android:layout_margin="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/btnclose"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:background="@drawable/button_clicked1"
            android:textAlignment="center"
            android:layout_gravity="end"/>
        <ImageView
            android:id="@+id/previewimg"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:background="@drawable/countdown"
            android:layout_weight="55"
            android:layout_marginTop="10dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textdescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="30"
            android:text="აირჩიე უმაღლესი ციფრი. დააგროვე 20 ქულა და გადადი შემდეგ ლეველზე."
            android:textColor="#404040"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btncontinue"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:background="@drawable/button_clicked1"
            android:layout_weight="15"
            android:text="გაგრძელება"
            android:textStyle="bold"
            android:textColor="#404040"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />


    </LinearLayout>


</LinearLayout>